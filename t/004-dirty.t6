
use v6.d;
use lib 'lib';
use ORM::ActiveRecord::Model;
use Test;

class User is Model is export {
  submethod BUILD {
    self.validate: 'fname', { :presence }
  }
}

plan 5;

%*ENV<DISABLE-SQL-LOG> = True;

my @errors;
my User $user;

$user = User.create({fname => 'Fred'});
nok $user.is-dirty;

$user.fname = 'John';
ok $user.is-dirty;
ok $user.save;
nok $user.is-dirty;
ok $user.fname eq 'John';
