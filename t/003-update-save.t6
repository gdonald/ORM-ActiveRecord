
use v6.d;
use lib 'lib';
use ORM::ActiveRecord::Model;
use Test;

class User is Model {
  submethod BUILD {
    self.validate: 'fname', { :presence }
  }
}

plan 3;

%*ENV<DISABLE-SQL-LOG> = True;

my @errors;
my User $user;

$user = User.create({fname => 'Fred'});
ok $user.is-valid;

$user.fname = 'John';
ok $user.save;
ok $user.fname eq 'John';
