
use v6.d;
use lib 'lib';
use ORM::ActiveRecord::Model;
use Test;

class User is Model {
  submethod BUILD {
    self.validate: 'fname', { :presence, message => 'fname is required' }
  }
}

plan 2;

%*ENV<DISABLE-SQL-LOG> = True;

my User $user;

$user = User.build;
nok $user.is-valid;
ok $user.errors.fname eq 'fname is required';
